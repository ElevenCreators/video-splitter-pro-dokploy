{
  "name": "video-splitter-pro",
  "description": "Professional Video Splitter - Clone of freemediatools.com",
  "framework": "nextjs",
  "buildCommand": "bun run build",
  "startCommand": "bun start",
  "healthcheckPath": "/",
  "healthcheckTimeout": 300,
  "resources": {
    "memory": "2048MB",
    "cpu": "2vCPU",
    "storage": "10GB"
  },
  "environment": {
    "NODE_ENV": "production",
    "FFMPEG_THREADS": "2",
    "MAX_FILE_SIZE": "2147483648",
    "SEGMENT_TIMEOUT": "600",
    "TEMP_CLEANUP_INTERVAL": "300"
  },
  "features": {
    "customDomain": true,
    "autoScale": true,
    "zeroDowntime": true,
    "metrics": true,
    "alerts": true
  },
  "deployment": {
    "source": "github",
    "branch": "main",
    "autoDeployOnPush": true
  }
}
