{
  "name": "eleven-creators-splitter",
  "version": "1.0.0",
  "description": "Advanced video splitter to cut videos into precise intervals. Perfect for content creators.",
  "private": true,
  
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3000",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p ${PORT:-3000}",
    "start:production": "NODE_ENV=production next start -H 0.0.0.0 -p 3000",
    "lint": "bunx tsc --noEmit && next lint",
    "format": "bunx biome format --write",
    "setup:hostinger": "chmod +x hostinger-setup.sh && echo 'Run: ./hostinger-setup.sh YOUR_DOMAIN.com https://github.com/YOUR_USER/eleven-creators-splitter.git'",
    "setup:dokploy": "chmod +x dokploy-setup.sh && echo 'Run: ./dokploy-setup.sh YOUR_DOMAIN.com'",
    "deploy:dokploy": "git add . && git commit -m 'Deploy Eleven Creators Splitter to Dokploy' && git push origin main",
    "logs": "journalctl -u video-splitter -f",
    "logs:docker": "docker logs -f eleven-creators-splitter",
    "status": "systemctl status video-splitter nginx",
    "status:docker": "docker ps | grep eleven-creators",
    "restart": "systemctl restart video-splitter",
    "restart:docker": "docker restart eleven-creators-splitter",
    "update": "git pull && bun install && bun run build && systemctl restart video-splitter",
    "update:dokploy": "git pull && echo 'Push to trigger auto-deploy in Dokploy'"
  },
  "dependencies": {
    "@types/formidable": "^3.4.5",
    "@types/multer": "^2.0.0",
    "fluent-ffmpeg": "^2.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "formidable": "^3.5.4",
    "lucide-react": "^0.475.0",
    "multer": "^2.0.2",
    "next": "^15.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "same-runtime": "^0.0.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@biomejs/biome": "1.9.4",
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^20.17.50",
    "@types/react": "^18.3.22",
    "@types/react-dom": "^18.3.7",
    "eslint": "^9.27.0",
    "eslint-config-next": "15.1.7",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "dokploy": {
    "name": "eleven-creators-splitter",
    "description": "Advanced video splitter for content creators - Cut videos into precise intervals",
    "framework": "nextjs",
    "buildCommand": "bun run build",
    "startCommand": "bun start",
    "port": 3000,
    "environment": {
      "NODE_ENV": "production",
      "MAX_FILE_SIZE": "4294967296",
      "FFMPEG_THREADS": "4",
      "SEGMENT_TIMEOUT": "900",
      "TEMP_CLEANUP_INTERVAL": "300",
      "MAX_CONCURRENT_JOBS": "3"
    }
  }
}
